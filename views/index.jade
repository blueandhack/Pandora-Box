extends layout

block content
    script(src='/javascripts/index.js')
    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/") #{title}
            .navbar-collapse.collapse(id="navbar")
                ul.nav.navbar-nav
    .container
        .row
            .col-sm-12.col-xs-12.col-md-12.col-lg-12
                .panel.panel-primary
                    .panel-heading Light, Door, Fan Status
                    .panel-body
                        .col-sm-2.col-md-2.col-xs-2.col-lg-2 Light
                        .col-sm-2.col-md-2.col-xs-2.col-lg-2(id="light")
                        .col-sm-2.col-md-2.col-xs-2.col-lg-2 Door
                        .col-sm-2.col-md-2.col-xs-2.col-lg-2(id="door")
                        .col-sm-2.col-md-2.col-xs-2.col-lg-2 Fan
                        .col-sm-2.col-md-2.col-xs-2.col-lg-2(id="fan")
        .row
            .col-sm-12.col-xs-12.col-md-12.col-lg-12
                .panel.panel-primary
                    .panel-heading Todo List
                    .panel-body
                        .list-group(id="list")


